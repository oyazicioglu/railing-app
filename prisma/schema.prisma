// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["windows", "native"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./railing.db"
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  active    Boolean?  @default(false)
  updatedAt DateTime?
  createdAt DateTime  @default(now())
  system    System?   @relation(fields: [systemId], references: [id])
  systemId  Int
}

model System {
  id          Int         @id @default(autoincrement())
  name        String
  type        String
  projects    Project[]
  accessories Accessory[]
  profiles    Profile[]
}

model Profile {
  id         Int      @id @default(autoincrement())
  code       String
  price      Int?
  width      Int
  height     Int
  depth      Int
  weight     Int
  objectPath String
  system     System[]
}

model Accessory {
  id         Int      @id @default(autoincrement())
  code       String
  price      Int?
  objectPath String
  system     System[]
}
